@using MediatR
@using MudBlazor
@using Oprim.Application.Patterns.PMO.Projects.Queries.GetProjects
@using Oprim.Domain.Entities.PMO
@using Oprim.Domain.Entities.WorkFlow
@using Oprim.Domain.Enums.WorkFlow
@rendermode InteractiveServer


<MudDialog Style="min-width: 500px; max-width: 700px; padding: 16px; border-radius: 8px;">
    <DialogContent>
        <MudForm @ref="_form" Validated="OnValidated" Class="pa-4">

            <MudText Typo="Typo.h5" Class="mb-4 font-weight-bold">@_titlePage</MudText>

            <MudGrid GutterSize="16px">
                <!-- نام گروه -->
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">نام گروه</MudText>
                    <MudTextField @bind-Value="_model.Name" Variant="Variant.Outlined" Required="true"/>
                </MudItem>

                <!-- پروژه -->
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">پروژه</MudText>
                    <MudSelect T="long" @bind-Value="_model.ProjectId" Variant="Variant.Outlined">
                        @foreach (var t in _projects)
                        {
                            <MudSelectItem T="long" Value="@t.Id">@t.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <!-- تقویم -->
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">تقویم</MudText>
                    <MudDatePicker @bind-Value="_model.CalendarId" Variant="Variant.Outlined"/>
                </MudItem>

                <!-- پیش‌کد -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">پیش‌کد</MudText>
                    <MudTextField @bind-Value="_model.PrefixCode" Variant="Variant.Outlined" MaxLength="3"/>
                </MudItem>

                <!-- شاخص زمان پایه -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">شاخص زمان پایه</MudText>
                    <MudNumericField @bind-Value="_model.BaseTimeDurationIndex" Variant="Variant.Outlined" HideSpinButtons="true"/>
                </MudItem>

                <!-- رنگ -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">کد رنگ</MudText>
                    <MudTextField @bind-Value="_model.ColorCode" Variant="Variant.Outlined"/>
                </MudItem>

                <!-- رنگ متن -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">کد رنگ متن</MudText>
                    <MudTextField @bind-Value="_model.TextColorCode" Variant="Variant.Outlined"/>
                </MudItem>

                <!-- جریمه -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">میزان جریمه</MudText>
                    <MudNumericField @bind-Value="_model.Penalty" Variant="Variant.Outlined" HideSpinButtons="true"/>
                </MudItem>

                <!-- نوع اعمال جریمه -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">نوع اعمال جریمه</MudText>
                    <MudSelect T="PenaltyApplyTypes" @bind-Value="_model.PenaltyApplyType" Variant="Variant.Outlined">
                        @foreach (var type in Enum.GetValues<PenaltyApplyTypes>())
                        {
                            <MudSelectItem T="PenaltyApplyTypes" Value="@type">@type</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <!-- امتیاز -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">امتیاز</MudText>
                    <MudNumericField @bind-Value="_model.Score" HideSpinButtons="true" Variant="Variant.Outlined"/>
                </MudItem>

                <!-- نوع اعمال امتیاز -->
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.subtitle1" Class="mb-1">نوع اعمال امتیاز</MudText>
                    <MudSelect T="ScoreApplyTypes" @bind-Value="_model.ScoreApplyType" Variant="Variant.Outlined">
                        @foreach (var type in Enum.GetValues<ScoreApplyTypes>())
                        {
                            <MudSelectItem T="ScoreApplyTypes" Value="@type">@type</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <!-- بدون مقاله -->
                <MudItem xs="12">
                    <MudCheckBox T="bool" @bind-Checked="_model.NoArticle" Label="بدون مقاله"/>
                </MudItem>

            </MudGrid>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Spacing="2" Class="w-100 mt-2">
            <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="Cancel">انصراف</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">ثبت</MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public WorkTemplate? Item { get; set; }
    [Inject] private IMediator _mediator { set; get; }
    private MudForm? _form;
    private WorkTemplate _model = new();
    private List<Project> _projects = [];
    private string _titlePage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (Item is null)
        {
            _model = new WorkTemplate();
            _titlePage = "فرم ثبت گروه پروژه";
        }
        else
        {
            _titlePage = "فرم ویرایش گروه پروژه";
            _model = new WorkTemplate
            {
                Id = Item.Id,
                Name = Item.Name,
                CreateTime = Item.CreateTime,
                ProjectId = Item.ProjectId,
                CalendarId = Item.CalendarId,
                PrefixCode = Item.PrefixCode,
                BaseTimeDurationIndex = Item.BaseTimeDurationIndex,
                ColorCode = Item.ColorCode,
                TextColorCode = Item.TextColorCode,
                Penalty = Item.Penalty,
                PenaltyApplyType = Item.PenaltyApplyType,
                Score = Item.Score,
                ScoreApplyType = Item.ScoreApplyType,
                NoArticle = Item.NoArticle
            };
        }

        _projects = await _mediator.Send(new GetProjectsQuery());
        StateHasChanged();
    }

    private async Task Submit()
    {
        await _form!.Validate();
        if (_form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(_model));
            _model = null;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private void OnValidated()
    {
    }

}
